{
  "name": "project-templates",
  "version": "1.0.0",
  "description": "A tool for quickly setting up the base of projects using templates.",
  "main": "index.js",
  "type": "module",
  "directories": {
    "lib": "src"
  },
  "scripts": {
    "build": "rimraf ./out && tsc && babel src --extensions '.ts' --out-dir out",
    "dev": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "check-types": "tsc",
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:watch": "nodemon -w src -w .eslintrc.js -w .prettierrc.json -e .js,.ts -x \"npm run lint\"",
    "lint:fix": "npm run lint -- --fix"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-syntax-top-level-await": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/fs-extra": "^9.0.9",
    "@types/jest": "^26.0.22",
    "@types/lodash.set": "^4.3.6",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-plugin-add-import-extension": "^1.5.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "lodash.set": "^4.3.2"
  }
}
